{% extends "layout.twig" %}
{% block title %} Mis favoritas {% endblock %}
{% block main_container %}
    <h2>Mis Canciones favoritas</h2>

    <div class="table-responsive">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Fecha</th>
                <th>Precio</th>
                <th/> eliminar </th>
                <th class="col-md-1"></th>
            </tr>
            </thead>
            <tbody>
            {% for song in favorites %}
                <tr>
                    <td>{{ song.title }}</td>
                    <td>{{ song.date }}</td>
                    <td>{{ song.price }}</td>
                    <td> <a href="/songs/favorites/delete/{{song._id}}">Eliminar</a> </td>
                    </td>
                </tr>
            {% endfor %}
            Precio total: {{ totalPrice }}
            </tbody>
        </table>
    </div>
{% endblock %}